<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install PUBLIC "-//Joomla! 2.5//DTD template 1.0//EN" "https://www.joomla.org/xml/dtd/2.5/template-install.dtd">
<extension version="3.1" type="template" client="site">
	<name>easylife</name>
	<version>1.0</version>
	<creationDate>13/08/2016</creationDate>
	<author>Sergey Maksimov</author>
	<authorEmail>admin@joomla.org</authorEmail>
	<copyright>Copyright (C) 2016 Sergey Maksimov</copyright>
	<description>TPL_EASYLIFE_XML_DESCRIPTION</description>
	<files>
		<filename>component.php</filename>
		<filename>error.php</filename>
		<filename>offline.php</filename>
		<filename>favicon.ico</filename>
		<filename>index.php</filename>
		<filename>templateDetails.xml</filename>
		<filename>template_preview.png</filename>
		<filename>template_thumbnail.png</filename>
		<folder>css</folder>
        <folder>fonts</folder>
		<folder>html</folder>
		<folder>images</folder>
		<folder>img</folder>
		<folder>js</folder>
		<folder>language</folder>
		<folder>less</folder>
	</files>
	<positions>
		<position>callme</position>
		<position>profile</position>
		<position>navigation</position>
		<position>socials</position>
		<position>carousel</position>
		<position>article</position>
		<position>footer1</position>
		<position>footer2</position>
		<position>footer3</position>
		<position>debug</position>
	</positions>
	<languages folder="language">
		<language tag="en-GB">en-GB/en-GB.tpl_easylife.ini</language>
		<language tag="en-GB">en-GB/en-GB.tpl_easylife.sys.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="advanced">
				<!--<field name="templateColor" class="" type="color" default="#08C"
					label="TPL_PROTOSTAR_COLOR_LABEL"
					description="TPL_PROTOSTAR_COLOR_DESC" />

				<field name="templateBackgroundColor" class="" type="color" default="#F4F6F7"
					label="TPL_PROTOSTAR_BACKGROUND_COLOR_LABEL"
					description="TPL_PROTOSTAR_BACKGROUND_COLOR_DESC" /> -->

				<field name="logoFile" class="" type="media" default=""
					label="TPL_EASYLIFE_LOGO_LABEL"
					description="TPL_EASYLIFE_LOGO_DESC" />

				<field name="sitetitle"  type="text" default=""
					label="JGLOBAL_TITLE"
					description="JFIELD_ALT_PAGE_TITLE_LABEL"
					filter="string" />

				<field name="sitedescription"  type="text" default=""
					label="JGLOBAL_DESCRIPTION"
					description="JGLOBAL_SUBHEADING_DESC"
					filter="string" />
                                
                                <field name="phoneNumber" 
                                        type="text" 
                                        default=""
                                        label="TPL_EASYLIFE_PHONE_NUMBER"
                                        description="TPL_EASYLIFE_PHONE_DESCRIPTION"
                                        filter="string" />

				<field name="googleFont"
					type="radio"
					class="btn-group btn-group-yesno"
					default="1"
					label="TPL_EASYLIFE_FONT_LABEL"
					description="TPL_EASYLIFE_FONT_DESC"
				>
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>

				<field name="googleFontName" class="" type="text" default="Open+Sans"
					label="TPL_EASYLIFE_FONT_NAME_LABEL"
					description="TPL_EASYLIFE_FONT_NAME_DESC" />
                                <!--
				<field name="fluidContainer"
					type="radio"
					class="btn-group btn-group-yesno"
					default="0"
					label="TPL_PROTOSTAR_FLUID_LABEL"
					description="TPL_PROTOSTAR_FLUID_DESC"
				>
					<option value="1">TPL_PROTOSTAR_FLUID</option>
					<option value="0">TPL_PROTOSTAR_STATIC</option>
				</field>
                                -->
			</fieldset>
		</fields>
	</config>
</extension>
